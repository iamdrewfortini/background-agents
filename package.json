{
  "name": "warp-background-agents",
  "version": "1.0.0",
  "description": "A suite of background agents for Warp terminal development and automation",
  "repository": {
    "type": "git",
    "url": "https://github.com/Diatonic-AI/background-agents.git"
  },
  "main": "index.js",
  "scripts": {
    "dev": "node src/dev-server.js",
    "test": "echo 'No tests configured yet' && exit 0",
    "start": "node src/index.js",
    "build": "webpack --mode production",
    "lint": "eslint src/",
    "format": "prettier --write src/",
    "setup": "node scripts/setup.js",
    "detect": "node scripts/detect-repo.js",
    "cursor": "node .cursor/start-agents.js",
    "clean": "rm -rf logs/* monitoring/* reviews/* test-results/* deployments/* security/* performance/* docs/*",
    "reset": "npm run clean && npm run setup",
    "list": "node src/index.js list",
    "configure": "node scripts/detect-repo.js && npm run setup"
  },
  "keywords": [
    "warp",
    "terminal",
    "background-agents",
    "automation",
    "development"
  ],
  "author": "Background Agents Team",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.0",
    "chalk": "^4.1.2",
    "chokidar": "^3.5.3",
    "commander": "^11.1.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "fs-extra": "^11.1.1",
    "glob": "^10.3.10",
    "inquirer": "^8.2.6",
    "json5": "^2.2.3",
    "node-cron": "^3.0.3",
    "ora": "^5.4.1",
    "winston": "^3.11.0",
    "ws": "^8.14.2",
    "yaml": "^2.3.4"
  },
  "devDependencies": {
    "@types/node": "^20.9.0",
    "eslint": "^8.57.1",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "prettier": "^3.6.2",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
