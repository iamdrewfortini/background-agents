# Background Agents Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# GITHUB INTEGRATION (Required for GitHub Automation Agent)
# =============================================================================

# GitHub Personal Access Token (classic)
# Required permissions: repo, workflow, write:packages, admin:org, admin:repo_hook, 
# gist, notifications, user, project
# Create at: https://github.com/settings/tokens/new
GITHUB_TOKEN=ghp_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# GitHub Repository Information (optional - auto-detected from git remote)
GITHUB_OWNER=your-github-username
GITHUB_REPO=your-repo-name

# GitHub Webhook Secret (optional - for receiving GitHub webhooks)
# GITHUB_WEBHOOK_SECRET=your-webhook-secret

# =============================================================================
# AI INTEGRATION (Choose one provider)
# =============================================================================

# AI Provider Selection
AI_PROVIDER=openai  # Options: openai, anthropic

# --- OpenAI Configuration ---
# Get your API key at: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
OPENAI_MODEL=gpt-4  # Options: gpt-4, gpt-4-turbo-preview, gpt-3.5-turbo

# --- Anthropic Configuration (alternative to OpenAI) ---
# Get your API key at: https://console.anthropic.com/account/keys
# ANTHROPIC_API_KEY=sk-ant-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
# ANTHROPIC_MODEL=claude-3-opus-20240229  # Options: claude-3-opus-20240229, claude-3-sonnet-20240229

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================

# Server Port
PORT=3000

# Node Environment
NODE_ENV=development  # Options: development, production, test

# =============================================================================
# AGENT CONFIGURATION (Optional)
# =============================================================================

# Logging
LOG_LEVEL=info  # Options: debug, info, warn, error
LOG_DIR=./logs
LOG_RETENTION_DAYS=30

# Agent Management
MAX_CONCURRENT_AGENTS=5
HEALTH_CHECK_INTERVAL=30000  # milliseconds
RESTART_ON_FAILURE=true
MAX_RESTART_ATTEMPTS=3

# =============================================================================
# CURSOR ENVIRONMENT (Auto-detected)
# =============================================================================

# These are automatically set by Cursor, don't manually configure unless needed
# CURSOR_ENVIRONMENT=true
# CURSOR_WORKSPACE_ID=auto-detected
# CURSOR_SESSION_ID=auto-detected

# =============================================================================
# FEATURE FLAGS (Optional)
# =============================================================================

# Enable specific features
ENABLE_METRICS=true
ENABLE_HEALTH_CHECKS=true
DEBUG=false
VERBOSE_LOGGING=false

# =============================================================================
# SECURITY (Optional)
# =============================================================================

# API Security
API_RATE_LIMIT=100  # requests per minute
API_TIMEOUT=30000  # milliseconds
API_CORS_ORIGIN=*  # Configure for production
API_AUTH_REQUIRED=false

# =============================================================================
# NOTIFICATIONS (Optional)
# =============================================================================

# Notification Channels
NOTIFICATION_CHANNELS=console,file  # Options: console, file, webhook, slack, email

# Webhook Notifications
# NOTIFICATION_WEBHOOK_URL=https://your-webhook-endpoint.com/notifications

# Slack Notifications
# NOTIFICATION_SLACK_WEBHOOK=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# Email Notifications
# NOTIFICATION_EMAIL=admin@example.com

# =============================================================================
# MONITORING (Optional)
# =============================================================================

# System Monitoring
MONITORING_INTERVAL=30000  # milliseconds
MONITORING_METRICS=cpu,memory,disk,network
MONITORING_ALERT_CPU=80  # percentage
MONITORING_ALERT_MEMORY=85  # percentage
MONITORING_ALERT_DISK=90  # percentage

# =============================================================================
# TESTING (Optional)
# =============================================================================

# Test Runner Configuration
TEST_COMMAND=npm test
TEST_COVERAGE_THRESHOLD=80  # percentage
TEST_TIMEOUT=30000  # milliseconds
TEST_MAX_RETRIES=3
TEST_PARALLEL=true

# =============================================================================
# FILE WATCHING (Optional)
# =============================================================================

# Paths to watch for changes
WATCH_PATHS=src/,lib/,app/,tests/
EXCLUDE_PATHS=node_modules/,dist/,build/,coverage/,.git/
MAX_FILE_SIZE=1MB

# =============================================================================
# DEPLOYMENT (Optional)
# =============================================================================

# Deployment Configuration
DEPLOYMENT_ENVIRONMENTS=staging,production
DEPLOYMENT_AUTO_DEPLOY=false
DEPLOYMENT_REQUIRE_APPROVAL=true
DEPLOYMENT_ROLLBACK_ON_FAILURE=true
DEPLOYMENT_HEALTH_CHECKS=true

# =============================================================================
# PERFORMANCE (Optional)
# =============================================================================

# Performance Thresholds
PERFORMANCE_ANALYSIS_INTERVAL=3600000  # milliseconds (1 hour)
PERFORMANCE_THRESHOLD_FCP=2000  # First Contentful Paint (ms)
PERFORMANCE_THRESHOLD_LCP=4000  # Largest Contentful Paint (ms)
PERFORMANCE_THRESHOLD_CLS=0.1  # Cumulative Layout Shift

# =============================================================================
# DOCUMENTATION (Optional)
# =============================================================================

# Documentation Generation
DOCS_AUTO_GENERATE=true
DOCS_FORMATS=markdown,html,pdf
DOCS_INCLUDE_EXAMPLES=true
DOCS_UPDATE_ON_CHANGE=true
DOCS_OUTPUT_DIR=./docs